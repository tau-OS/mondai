{
    "app-id" : "co.tauos.Mondai",
    "runtime" : "co.tauos.Platform",
    "runtime-version" : "stable",
    "sdk" : "co.tauos.Sdk",
    "command" : "co.tauos.Mondai",
    "finish-args" : [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
        {
            "name" : "mondai",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=false"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "branch": "main",
                    "dest": "./subprojects/blueprint-compiler"
                }
            ]
        }
    ]
}
